<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.haiyang.campusrunner.dao.UserMapper">
    <select id="getUserByUsername" parameterType="java.lang.String" resultType="user">
        select * from user where username = #{username}
    </select>
    <insert id="addUser" parameterType="user">
        insert into user(username,password,name,sex,phone,address)
        values(#{username},#{password},#{name},#{sex},#{phone},#{address})
    </insert>
</mapper>